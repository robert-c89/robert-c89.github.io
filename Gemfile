source 'https://rubygems.org'

# middleman-basis is currently not compatible with middleman v4
gem "middleman", '~> 3'
gem "middleman-bower"
gem "middleman-livereload"
gem 'middleman-search_engine_sitemap'

# Source minification
gem "middleman-minify-html"

# middleman-optim requires external utilities:
#   All setup instructions can be found here: https://github.com/toy/image_optim
gem 'middleman-imageoptim'

gem 'middleman-gh-pages'      # Build and deploy
gem 'modular-scale'           # Modular scale typography
gem 'middleman-autoprefixer'  # Middleman autoprefixer
gem "middleman-favicon-maker" # Favicon generator
gem 'font-awesome-middleman'       # Font Awesome icons
